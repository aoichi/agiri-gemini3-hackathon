rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /agents/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    match /battles/{battleId} {
      allow read: if request.auth != null;
    }

    match /meta/{docId} {
      allow read: if true;
    }
  }
}
